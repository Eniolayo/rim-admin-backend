{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 60000,
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "maxWorkers": 1,
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "clearMocks": true,
  "resetModules": true,
  "restoreMocks": true,
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}